<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayoutHeader"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_subject_name"
        android:layout_width="85sp"
        android:layout_height="60sp"
        android:layout_marginStart="11dp"
        android:gravity="left|center_vertical|center_horizontal"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_subject_id"
        android:layout_width="75sp"
        android:layout_height="60sp"
        android:layout_marginStart="24dp"
        android:textColor="@color/black"
        android:gravity="left|center_vertical|center_horizontal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_subject_name" />

    <TextView
        android:id="@+id/text_classroom"
        android:layout_width="50sp"
        android:layout_height="60sp"
        android:layout_marginStart="9dp"
        android:textColor="@color/black"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_subject_id" />

    <TextView
        android:id="@+id/text_teacher_name"
        android:layout_width="61sp"
        android:layout_height="60sp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/text_classroom"
        android:gravity="center_vertical|center_horizontal|center"
        android:textColor="@color/black"
        android:textSize="18sp" />


</RelativeLayout>