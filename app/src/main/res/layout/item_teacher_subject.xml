<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayoutHeader"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_subject_name"
        android:layout_width="84sp"
        android:layout_height="70sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_subject_id"
        android:layout_width="85sp"
        android:layout_height="70sp"
        android:layout_toEndOf="@+id/text_subject_name"

        android:gravity="left|center_vertical|center_horizontal"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_classroom"
        android:layout_width="72sp"
        android:layout_height="70sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_subject_id"
        android:gravity="left|center_vertical|center_horizontal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_student_num"
        android:layout_width="55sp"
        android:layout_height="70sp"
        android:layout_alignBottom="@+id/text_classroom"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_classroom"
        android:gravity="left|center_vertical|center_horizontal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text_check_situation"
        android:layout_width="85sp"
        android:layout_height="70sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_student_num"
        android:gravity="left|center_vertical|center_horizontal"
        android:textSize="19sp" />


</RelativeLayout>